/* pages/goals/detail/detail.wxss */
.detail-container {
  min-height: 100vh;
  background-color: #e6f0ff;
  padding-bottom: 30rpx;
}

.header {
  padding: 30rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
}

/* 下拉菜单样式 */
.dropdown-menu {
  padding: 10rpx;
  cursor: pointer;
}

.menu-icon {
  font-size: 32rpx;
  color: #666;
}

.action-menu {
  position: absolute;
  top: 80rpx;
  right: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  width: 240rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-item.delete {
  color: #e34d59;
}

.loading-center {
  margin-top: 200rpx;
  display: flex;
  justify-content: center;
}

.goal-card {
  margin: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goal-header {
  padding: 30rpx;
  position: relative;
}

.goal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
}

.completed-tag {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  background-color: rgba(255, 255, 255, 0.3);
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.goal-info {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.goal-description {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.description-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.description-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.action-group {
  padding: 30rpx;
}

.action-btn {
  margin-bottom: 20rpx;
}

.delete-btn {
  margin: 0 30rpx 30rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  margin-top: 100rpx;
}

.empty-text {
  text-align: center;
}

.empty-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 任务列表区域 */
.tasks-section {
  margin-top: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 任务项样式 */
.task-items {
  margin-bottom: 30rpx;
}

.task-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-item:last-child {
  border-bottom: none;
}

.task-checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
  margin-right: 20rpx;
  position: relative;
  flex-shrink: 0;
  margin-top: 6rpx;
}

.task-checkbox.checked {
  background-color: #4d8cf7;
  border-color: #4d8cf7;
}

.checkbox-inner {
  position: absolute;
  width: 20rpx;
  height: 10rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(-45deg);
  top: 10rpx;
  left: 8rpx;
  opacity: 0;
}

.task-checkbox.checked .checkbox-inner {
  opacity: 1;
}

.task-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  overflow: visible;
}

.task-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.task-info {
  margin-bottom: 8rpx;
}

.task-date {
  font-size: 24rpx;
  color: #999;
}

.task-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.task-quantify {
  display: inline-block;
  font-size: 24rpx;
  color: #4d8cf7;
  background-color: rgba(77, 140, 247, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.quantify-value {
  font-weight: 500;
}

.add-task-btn-container {
  margin-top: 30rpx;
}

.task-stats {
  display: flex;
  flex-wrap: wrap;
  background-color: #f7f8fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  width: 50%;
  margin-bottom: 20rpx;
}

.stat-label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-date, .stat-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.waiting-tasks {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-tasks {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.empty-box-image {
  width: 120rpx;
  height: 120rpx;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23cccccc"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14z"/><path d="M12 12l-2-2-2 2 2 2 2-2zm0 0l2-2 2 2-2 2-2-2z"/></svg>');
  background-repeat: no-repeat;
  background-position: center;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.create-btn {
  background-color: #4d8cf7;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 0 32rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease-in-out;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 60%;
}