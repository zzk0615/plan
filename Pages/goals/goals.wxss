}

.create-btn:hover {
  background-color: var(--td-brand-color-hover, #3a7bdf);
  transform: translateY(-2rpx);
  box-shadow: var(--td-shadow-2);
}

.create-btn:active {
  background-color: var(--td-brand-color-pressed, #2c68c7);
  transform: translateY(0);
  box-shadow: var(--td-shadow-1);
}

.create-btn-icon {
  margin-right: var(--td-spacer-2, 16rpx);
  font-size: var(--td-font-size-icon-lg, 40rpx);
}

