/* pages/goals/goals.wxss */
.goals-container {
  min-height: 100vh;
  background-color: var(--td-bg-color-page, #f7f8fa);
  padding-bottom: var(--td-spacer-4, 32rpx);
}

/* 头部区域 */
.header {
  padding: var(--td-spacer-3, 24rpx) var(--td-spacer-4, 32rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: var(--td-bg-color-container, #ffffff);
  box-shadow: var(--td-shadow-1);
  margin-bottom: var(--td-spacer-2, 16rpx);
}

.title {
  font-size: var(--td-font-size-title-lg, 40rpx);
  font-weight: var(--td-font-weight-bold, 600);
  color: var(--td-text-color-primary, #1a1a1a);
}

/* 目标列表区域 */
.goals-section {
  margin: var(--td-spacer-2, 16rpx) 0;
  background-color: var(--td-bg-color-container, #ffffff);
  border-radius: var(--td-radius-medium, 16rpx);
  overflow: hidden;
  box-shadow: var(--td-shadow-1);
}

.section-title {
  font-size: var(--td-font-size-title-sm, 32rpx);
  font-weight: var(--td-font-weight-medium, 500);
  color: var(--td-text-color-primary, #1a1a1a);
  padding: var(--td-spacer-3, 24rpx) var(--td-spacer-4, 32rpx);
  background-color: var(--td-bg-color-component, #f3f3f3);
}

/* 目标卡片 */
.goal-item {
  margin: 0 var(--td-spacer-4, 32rpx);
  border-bottom: 1rpx solid var(--td-border-level-1-color, #eeeeee);
}

.goal-item:last-child {
  border-bottom: none;
}

.goal-card {
  display: flex;
  padding: var(--td-spacer-3, 24rpx) 0;
  position: relative;
  transition: all 0.3s var(--td-timing-function-ease-in-out);
}

.goal-card:active {
  background-color: var(--td-bg-color-container-active, #f5f5f5);
}

.goal-color {
  width: 12rpx;
  height: 48rpx;
  border-radius: var(--td-radius-default, 8rpx);
  margin-right: var(--td-spacer-3, 24rpx);
  flex-shrink: 0;
}

.goal-content {
  flex: 1;
  min-width: 0;
  padding-right: 160rpx;
}

.goal-title {
  font-size: var(--td-font-size-body-large, 34rpx);
  font-weight: var(--td-font-weight-medium, 500);
  color: var(--td-text-color-primary, #1a1a1a);
  margin-bottom: var(--td-spacer-1, 8rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goal-date {
  font-size: var(--td-font-size-caption-lg, 28rpx);
  color: var(--td-text-color-placeholder, #999999);
  margin-bottom: var(--td-spacer-1, 8rpx);
}

.goal-desc {
  font-size: var(--td-font-size-body-medium, 32rpx);
  color: var(--td-text-color-secondary, #666666);
  line-height: 1.5;
  margin-top: 8rpx;
  padding-right: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 状态标签 */
.goal-status,
.goal-remaining {
  position: absolute;
  right: var(--td-spacer-4, 32rpx);
  top: 50%;
  transform: translateY(-50%);
}

/* 空状态 */
.empty-state {
  padding: var(--td-spacer-8, 64rpx) var(--td-spacer-4, 32rpx);
  text-align: center;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto var(--td-spacer-6, 48rpx);
  padding: var(--td-spacer-4, 32rpx);
  background-color: var(--td-bg-color-component, #f3f3f3);
  border-radius: 50%;
}

.empty-image image {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.empty-title {
  font-size: var(--td-font-size-title-lg, 40rpx);
  font-weight: var(--td-font-weight-bold, 600);
  color: var(--td-text-color-primary);
  margin-bottom: var(--td-spacer-3, 24rpx);
}

.empty-desc {
  font-size: var(--td-font-size-body-medium, 32rpx);
  color: var(--td-text-color-secondary);
  line-height: 1.6;
  margin: 0 auto var(--td-spacer-8, 64rpx);
  max-width: 480rpx;
}

/* 按钮样式 */
.create-btn-container {
  padding: 0 var(--td-spacer-8, 64rpx);
  margin-top: var(--td-spacer-4, 32rpx);
}

.create-btn {
  height: var(--td-comp-size-xxxl, 96rpx);
  border-radius: var(--td-radius-large, 24rpx);
  font-weight: var(--td-font-weight-medium, 500);
  font-size: var(--td-font-size-body-large, 34rpx);
  background: linear-gradient(135deg, var(--td-brand-color, #0052d9), #2983f8);
  box-shadow: 0 8rpx 16rpx rgba(0, 82, 217, 0.2);
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 82, 217, 0.15);
}

/* 头部添加按钮 */
.add-btn {
  background: var(--td-brand-color, #0052d9);
  color: #ffffff;
  border-radius: var(--td-radius-default, 8rpx);
  font-size: var(--td-font-size-body-small, 28rpx);
  padding: 8rpx 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 82, 217, 0.15);
  transition: all 0.2s ease;
}

.add-btn:active {
  background: var(--td-brand-color-active, #003cab);
  transform: scale(0.98);
}

/* 加载状态 */
.loading-center {
  margin-top: 240rpx;
  color: var(--td-text-color-placeholder);
}

/* 使用TDesign组件的样式 */
.t-button {
  border-radius: var(--td-radius-medium, 16rpx);
  font-weight: var(--td-font-weight-medium, 500);
}

.t-tag {
  border-radius: var(--td-radius-small, 8rpx);
  padding: var(--td-spacer-1, 8rpx) var(--td-spacer-2, 16rpx);
}

.t-cell-group {
  background-color: transparent;
}

.t-cell {
  padding: var(--td-spacer-3, 24rpx) 0;
}

/* 创建目标按钮样式 */
.create-btn {
  background-color: var(--td-brand-color, #4d8cf7);
  color: var(--td-text-color-white, #ffffff);
  border: none;
  border-radius: var(--td-radius-medium, 16rpx);
  padding: 0 var(--td-spacer-4, 32rpx);
