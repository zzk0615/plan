/* pages/goals/create/create.wxss */
.create-container {
  min-height: 100vh;
  background-color: var(--td-bg-color-page, #f5f7fa);
  padding-bottom: var(--td-spacer-4, 32rpx);
}

/* 头部区域 */
.header {
  padding: var(--td-spacer-4, 32rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: var(--td-bg-color-container, #ffffff);
  box-shadow: var(--td-shadow-1);
}

.title {
  font-size: var(--td-font-size-title, 36rpx);
  font-weight: var(--td-font-weight-medium, 500);
  color: var(--td-text-color-primary, rgba(0, 0, 0, 0.9));
}

.add-btn {
  font-size: var(--td-font-size-body-large, 34rpx);
  color: var(--td-brand-color, #0052d9);
  font-weight: var(--td-font-weight-medium, 500);
}

/* 表单容器 */
.form-container {
  margin: var(--td-spacer-3, 24rpx);
  background-color: var(--td-bg-color-container, #ffffff);
  border-radius: var(--td-radius-medium, 16rpx);
  box-shadow: var(--td-shadow-1);
  padding: var(--td-spacer-3, 24rpx) 0;
}

/* 表单项通用样式 */
.form-item {
  padding: var(--td-spacer-3, 24rpx) var(--td-spacer-4, 32rpx);
  border-bottom: 1rpx solid var(--td-border-level-1-color, #eeeeee);
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: var(--td-font-size-body-medium, 32rpx);
  color: var(--td-text-color-secondary, rgba(0, 0, 0, 0.6));
  margin-bottom: var(--td-spacer-2, 16rpx);
}

/* 输入区域 */
.input-container {
  display: flex;
  align-items: center;
  padding: var(--td-spacer-2, 16rpx) 0;
}

.color-circle {
  width: var(--td-comp-size-xxs, 48rpx);
  height: var(--td-comp-size-xxs, 48rpx);
  border-radius: 50%;
  margin-right: var(--td-spacer-3, 24rpx);
  flex-shrink: 0;
}

.input-field {
  flex: 1;
  font-size: var(--td-font-size-body-large, 34rpx);
  color: var(--td-text-color-primary);
  min-height: var(--td-comp-size-m, 80rpx);
  line-height: 1.5;
}

/* 颜色选择器 */
.color-selector {
  display: flex;
  flex-wrap: wrap;
  gap: var(--td-spacer-3, 24rpx);
  padding: var(--td-spacer-2, 16rpx) 0;
}

.color-item {
  width: var(--td-comp-size-xxs, 48rpx);
  height: var(--td-comp-size-xxs, 48rpx);
  border-radius: 50%;
  border: 2rpx solid transparent;
  transition: all 0.3s var(--td-timing-function-ease-in-out);
}

.color-item.selected {
  border: 4rpx solid var(--td-brand-color, #0052d9);
  transform: scale(1.1);
  box-shadow: var(--td-shadow-1);
}

/* 日期选择 */
.date-picker-container {
  display: flex;
  align-items: center;
  padding: var(--td-spacer-2, 16rpx) 0;
}

.picker-value {
  flex: 1;
  font-size: var(--td-font-size-body-large, 34rpx);
  color: var(--td-text-color-primary);
}

.date-picker-icon {
  font-size: var(--td-font-size-body-large, 34rpx);
  color: var(--td-text-color-placeholder);
}

/* 错误提示 */
.error-message {
  display: flex;
  align-items: center;
  padding: 0 var(--td-spacer-4, 32rpx) var(--td-spacer-3, 24rpx);
  color: var(--td-error-color, #e34d59);
  font-size: var(--td-font-size-mark, 28rpx);
}

.error-message text {
  margin-left: var(--td-spacer-1, 8rpx);
}

/* 引导卡片 */
.guide-item {
  background-color: var(--td-brand-color-light, #f0f7ff);
  margin: 0 var(--td-spacer-4, 32rpx) var(--td-spacer-3, 24rpx);
  border-radius: var(--td-radius-medium, 16rpx);
  padding: var(--td-spacer-3, 24rpx);
  transition: all 0.3s var(--td-timing-function-ease-in-out);
}

.guide-item:active {
  background-color: var(--td-brand-color-focus, #d4e3fc);
}

.guide-title {
  font-size: var(--td-font-size-body-medium, 32rpx);
  color: var(--td-brand-color, #0052d9);
}

.guide-icon {
  margin-right: var(--td-spacer-2, 16rpx);
}

/* 日期显示区域 */
.date-display {
  background-color: var(--td-bg-color-secondarycontainer, #f6f6f6);
  margin: var(--td-spacer-4, 32rpx);
  padding: var(--td-spacer-3, 24rpx);
  border-radius: var(--td-radius-medium, 16rpx);
}

.date-info {
  display: flex;
  gap: var(--td-spacer-4, 32rpx);
}

.date-item {
  flex: 1;
}

.date-label {
  font-size: var(--td-font-size-mark, 28rpx);
  color: var(--td-text-color-placeholder);
  margin-bottom: var(--td-spacer-1, 8rpx);
}

.date-value {
  font-size: var(--td-font-size-body-large, 34rpx);
  color: var(--td-text-color-primary);
  margin-bottom: var(--td-spacer-1, 8rpx);
}

.date-hint {
  font-size: var(--td-font-size-mark, 28rpx);
  color: var(--td-brand-color, #0052d9);
}
/* 按钮样式 */
.button-group {
  padding: var(--td-spacer-4, 32rpx);
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}

.submit-btn {
  min-width: 480rpx; /* 最小宽度 */
  max-width: 640rpx; /* 最大宽度 */
  height: var(--td-comp-size-xxxl, 96rpx);
  line-height: var(--td-comp-size-xxxl, 96rpx);
  background-color: var(--td-brand-color, #0052d9);
  color: var(--td-text-color-anti, #ffffff);
  font-size: var(--td-font-size-body-large, 34rpx);
  border-radius: var(--td-radius-medium, 16rpx);
  transition: all 0.3s var(--td-timing-function-ease-in-out);
  border: none; /* 移除默认边框 */
  padding: 0 var(--td-spacer-4, 32rpx); /* 添加内边距 */
  box-shadow: var(--td-shadow-1); /* 添加阴影 */
}

.submit-btn:active {
  background-color: var(--td-brand-color-active, #003cab);
  transform: scale(0.98); /* 点击时轻微缩小 */
}